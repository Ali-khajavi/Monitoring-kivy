<MonitoringScreen>:
    customer_list: customer_list
    sensor_channel_1 : sensor_channel_1
    sensor_channel_2 : sensor_channel_2
    sensor_channel_3 : sensor_channel_3
    sensor_channel_4 : sensor_channel_4
    range_channel_1 : range_channel_1
    range_channel_2 : range_channel_2
    range_channel_3 : range_channel_3
    range_channel_4 : range_channel_4
    channel_1 : channel_1
    channel_2 : channel_2
    channel_3 : channel_3
    channel_4 : channel_4


    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'assets/BG1.jpg'  # Place the background image here
                size: self.size
                pos: self.pos

        # Public section with 2 columns and 2 rows
        GridLayout:
            cols: 2
            rows: 2
            spacing: 10
            padding: 20
            size_hint: 1, 1

            # Column 1, Row 1 - Scrollable customer list
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.25, 1  # Adjusted height to 1 to take full space

                Label:              # Replace with Image Label Customer List
                    font_size: .09 * self.width
                    text: "Customer List"
                    size_hint_y: None
                    height: 40

                ScrollView:
                    BoxLayout:
                        id: customer_list
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10

            # Column 2, Row 1 - Parent of All Charts
            GridLayout:
                cols: 2
                rows: 2
                spacing: 10
                padding: 10
                size_hint: 1, 1
                # Column 1, Row 1 Sensor Channel 1
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.3
                        orientation: 'vertical'
                        BoxLayout:      # Sensor Selection & Time Selection
                            padding: 5
                            spacing: 5
                            orientation: 'vertical'
                            size_hint_y : 0.8

                            Label:          # Replace with Image Label (Select-Sensor)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Sensor'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: sensor_channel_1
                                name: 'sensor_channel_1'
                                text: 'Sensor!'
                                values: ['Sensor!', 'Sensor!']  # Add some sensor options
                                on_text: root.sensor_selected(self.text, self.name)
                            
                            Label:          # Replace with Image Label (Select-time)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Time'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: range_channel_1
                                name: 'range_channel_1'
                                text: 'Range!'
                                values: ['Time!','Time!']
                                on_text: root.time_selected(self.text, self.name)

                        BoxLayout:      # Empty Gap
                            size_hint_y: 0.6
                            Label: 
                                text:''
                    
                    AnchorLayout:
                        id: channel_1
                        anchor_x: 'right'
                        anchor_y: 'top'
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background for the graph
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        
                # Column 2, Row 1 Sensor Channel 2
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.3
                        orientation: 'vertical'
                        BoxLayout:      # Sensor Selection & Time Selection
                            padding: 5
                            spacing: 5
                            orientation: 'vertical'
                            size_hint_y : 0.8

                            Label:          # Replace with Image Label (Select-Sensor)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Sensor'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: sensor_channel_2
                                name: 'sensor_channel_2'
                                text: 'Sensor!'
                                values: ['Sensor!', 'Sensor!']  # Add some sensor options
                                on_text: root.sensor_selected(self.text, self.name)
                            
                            Label:          # Replace with Image Label (Select-time)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Time'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: range_channel_2
                                name: 'range_channel_2'
                                text: 'Range!'
                                values: ['Time!','Time!']
                                on_text: root.time_selected(self.text, self.name)

                        BoxLayout:      # Empty Gap
                            size_hint_y: 0.6
                            Label: 
                                text:''
                               
                    AnchorLayout:
                        id: channel_2
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background for the graph
                            Rectangle:
                                size: self.size
                                pos: self.pos

                # Column 1, Row 2 Sensor Channel 3
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.3
                        orientation: 'vertical'
                        BoxLayout:      # Sensor Selection & Time Selection
                            padding: 5
                            spacing: 5
                            orientation: 'vertical'
                            size_hint_y : 0.8

                            Label:          # Replace with Image Label (Select-Sensor)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Sensor'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: sensor_channel_3
                                name: 'sensor_channel_3'
