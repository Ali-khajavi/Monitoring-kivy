<MonitoringScreen>:
    name: 'monitoring'

    BoxLayout:
        orientation: 'horizontal'

        # Column 1: Scrollable Customer List
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3  # Adjust size as needed

            Label:
                text: 'Customer List'
                size_hint_y: None
                height: 40

            ScrollView:
                size_hint: (1, 1)
                BoxLayout:
                    id: customer_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

                    # Customer items will be added here dynamically
