                                text:'Select Time'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: range_channel_3
                                text: 'Range!'
                                name: 'range_channel_3'
                                values: ['Time!','Time!']
                                on_text: root.time_selected(self.text, self.name)

                        BoxLayout:      # Empty Gap
                            size_hint_y: 0.6
                            Label: 
                                text:''
                    
                    AnchorLayout:
                        id: channel_3
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background for the graph
                            Rectangle:
                                size: self.size
                                pos: self.pos

                # Column 2, Row 2 Sensor Channel 4
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.3
                        orientation: 'vertical'
                        BoxLayout:      # Sensor Selection & Time Selection
                            padding: 5
                            spacing: 5
                            orientation: 'vertical'
                            size_hint_y : 0.8
                            Label:          # Replace with Image Label (Select-Sensor)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Sensor'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: sensor_channel_4
                                name: 'sensor_channel_4'
                                text: 'Sensor!'
                                values: ['Sensor.', 'Sensor..']  # Add some sensor options
                                on_text: root.sensor_selected(self.text, self.name)
                            
                            Label:          # Replace with Image Label (Select-time)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Time'
                            Spinner:
                                font_size: ((.14 * self.height) + (.14 * self.width))
                                id: range_channel_4
