<MonitoringScreen>:
    customer_list: customer_list

    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'assets/BG1.jpg'  # Place the background image here
                size: self.size
                pos: self.pos

        # Public section with 2 columns and 2 rows
        GridLayout:
            cols: 2
            rows: 2
            spacing: 10
            padding: 20
            size_hint: 1, 1

            # Column 1, Row 1 - Scrollable customer list
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.25, 1  # Adjusted height to 1 to take full space

                Label:
                    text: "Customer List"
                    size_hint_y: None
                    height: 40

                ScrollView:
                    BoxLayout:
                        id: customer_list
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: 10

            # Column 2, Row 1 - Parent of All Charts
            GridLayout:
                cols: 2
                rows: 2
                spacing: 10
                padding: 10
                size_hint: 1, 1

                # Column 1, Row 1 Sensor Channel 1
                BoxLayout:
                    BoxLayout:
                        size_hint_x: 0.3
                        orientation: 'vertical'
                        BoxLayout:
                            padding: 5
                            spacing: 5
                            orientation: 'vertical'
                            size_hint_y : 0.8

                            Label:          # Replace with Image Label (Select-Sensor)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Sensor'
                            Button:
                                text: 'sss'

                            Label:          # Replace with Image Label (Select-time)
                                color: 0,0,0
                                font_size: (self.width/4 + self.height/3)/2
                                text:'Select Time'
                            Button:
                                text: 'sss'
                        BoxLayout:
                            size_hint_y: 0.3
                            Label: 
                                text:''
                        BoxLayout:
                            size_hint_y: 0.3
                            Button:
                                text:'GG'
                    
                    AnchorLayout:
                        id: sensor_channel_1
                        anchor_x: 'right'
                        anchor_y: 'top'
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 1  # White background for the graph
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        
                # Column 2, Row 1 Sensor Channel 2
