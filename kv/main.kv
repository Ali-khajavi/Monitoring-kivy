ScreenManager:
    FirstMenuScreen:
    SettingsScreen:
    MonitoringScreen:
    CustomerSetupScreen:

<FirstMenuScreen>:
    name: 'first_menu'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'First Menu Page'
        Button:
            text: 'Go to Monitoring'
            on_press: root.manager.current = 'monitoring'
        Button:
            text: 'Go to Customer Setup'
            on_press: root.manager.current = 'customer_setup'
        Button:
            text: 'Go to Settings'
            on_press: root.manager.current = 'settings'

<SettingsScreen>:
    name: 'settings'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Settings Page'
        Button:
            text: 'Back to Menu'
            on_press: root.manager.current = 'first_menu'

<MonitoringScreen>:
    name: 'monitoring'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Monitoring Page'
        Button:
            text: 'Back to Menu'
            on_press: root.manager.current = 'first_menu'


<CustomerSetupScreen>:
    name: 'customer_setup'
    first_name_input: first_name_input
    last_name_input: last_name_input
    email_input: email_input
    phone_input: phone_input
    city_input: city_input
    description_input: description_input
    customer_list: customer_list

    BoxLayout:
        orientation: 'horizontal'
        padding: 10

        # Customer Registration Form (Top Left)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.4
            Label:
                text: 'Customer Registration'
            GridLayout:
                cols: 2
                Label:
                    text: 'First Name:'
                TextInput:
                    id: first_name_input
                Label:
                    text: 'Last Name:'
                TextInput:
                    id: last_name_input
                Label:
                    text: 'Email:'
                TextInput:
                    id: email_input
                Label:
                    text: 'Phone:'
                TextInput:
                    id: phone_input
                Label:
                    text: 'City:'
                TextInput:
                    id: city_input
                Label:
                    text: 'Description:'
                TextInput:
                    id: description_input
            Button:
                text: 'Register Customer'
                on_press: root.register_customer()

        # Customer List (Top Right)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            Label:
                text: 'Customer List'
            ScrollView:
                size_hint: (1, None)
                height: 300
                BoxLayout:
                    id: customer_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

        # Save/Load buttons
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            Button:
                text: 'Save Customers'
                on_press: root.save_customers()
            Button:
                text: 'Load Customers'
                on_press: root.load_customers()
            Button:
                text: 'Back to Menu'
                on_press: root.manager.current = 'first_menu'