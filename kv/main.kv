<CustomerSetupScreen>:
    name: 'customer_setup'
    name_input: name_input
    email_input: email_input
    sensor_code_input: sensor_code_input
    sensor_desc_input: sensor_desc_input
    customer_list: customer_list

    BoxLayout:
        orientation: 'vertical'
        padding: 10

        # Customer Registration
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Name:'
            TextInput:
                id: name_input
            Label:
                text: 'Email:'
            TextInput:
                id: email_input
            Button:
                text: 'Register Customer'
                on_press: root.register_customer()

        # Customer List
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Customer List'
            ScrollView:
                size_hint: (1, None)
                height: 150
                BoxLayout:
                    id: customer_list
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height

        # Sensor Registration
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Sensor Code:'
            TextInput:
                id: sensor_code_input
            Label:
                text: 'Sensor Description:'
            TextInput:
                id: sensor_desc_input
            Button:
                text: 'Add Sensor to Selected Customer'
                on_press: root.add_sensor_to_customer('some_customer_name')

        # Save/Load buttons
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Save Customers'
                on_press: root.save_customers()
            Button:
                text: 'Load Customers'
                on_press: root.load_customers()
            Button:
                text: 'Back to Menu'
                on_press: root.manager.current = 'first_menu'
