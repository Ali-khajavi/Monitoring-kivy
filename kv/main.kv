ScreenManager:
    FirstMenuScreen:
    SettingsScreen:
    MonitoringScreen:
    CustomerSetupScreen:

<FirstMenuScreen>:
    name: 'first_menu'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'First Menu Page'
        Button:
            text: 'Go to Monitoring'
            on_press: root.manager.current = 'monitoring'
        Button:
            text: 'Go to Customer Setup'
            on_press: root.manager.current = 'customer_setup'
        Button:
            text: 'Go to Settings'
            on_press: root.manager.current = 'settings'

<SettingsScreen>:
    name: 'settings'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Settings Page'
        Button:
            text: 'Back to Menu'
            on_press: root.manager.current = 'first_menu'

<MonitoringScreen>:
    name: 'monitoring'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Monitoring Page'
        Button:
            text: 'Back to Menu'
            on_press: root.manager.current = 'first_menu'


<CustomerSetupScreen>:
    name: 'customer_setup'
    first_name_input: first_name_input
    last_name_input: last_name_input
    email_input: email_input
    phone_input: phone_input
    city_input: city_input
    address_input: address_input
    description_input: description_input
    customer_list: customer_list

    BoxLayout: 
        orientation: 'horizontal'
        padding: 10

        #------------------------------ Customer Registration Form (Top Left) -----------------------
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.8
            Label:
                size_hint_y: 0.05
                text: 'Customer Registration Form'
                halign: 'left'
            GridLayout:
                cols: 2
                size_hint_y: .5
                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'First Name:'
                        size_hint_x: 0.9
                TextInput:
                    size_hint_x: 1.7
                    id: first_name_input
                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'Last Name:'
                        size_hint_x: 0.9
                TextInput:
                    size_hint_x: 1.7
                    id: last_name_input
                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'Email:'
                        size_hint_x: 0.9
                TextInput:
                    size_hint_x: 1.7
                    id: email_input
                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'Phone:'
                        size_hint_x: 0.9
                TextInput:
                    size_hint_x: 1.7
                    id: phone_input

                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'City:'
                        size_hint_x: 0.9
                TextInput:
                    size_hint_x: 1.7
                    id: city_input
                
                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'Address:'
                        size_hint_x: 0.9
                TextInput:
                    size_hint_x: 1.7
                    id: address_input

                AnchorLayout:
                    anchor_y: "top"
                    anchor_x: "left"
                    Label:
                        text: 'Description:'
                        size_hint_x: 0.9
                        size_hint_y: 0.3
                TextInput:
                    size_hint_x: 1.7
                    size_hint_y: 4
                    id: description_input
            Button:         #---------- Register Customer Button-----------
                size_hint_x: .5
                size_hint_y: .05
                text: 'Register Customer'
                on_press: root.register_customer()
                pos_hint: {"x":.5}
            AnchorLayout:   #----------Back to Main Menu Button-------------- 
                size_hint_y: .2
                anchor_x: "left"
                anchor_y: "bottom"
                Button:
                    on_press: root.manager.current = 'first_menu'
                    text: "Back to Main Menu"
                    size_hint_x: .6
                    size_hint_y: .2

        # Customer List (Top Right)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .8
            size_hint_y: 1
            Label:
                size_hint_x: .5
                size_hint_y: .05
                text: 'Customer List'
                pos_hint: {"x":.25}


            ScrollView:
                size_hint: (1, 1)
                height: 300
                BoxLayout:
                    id: customer_list
                    orientation: 'vertical'
                    size_hint_y: None  # Makes the height adjustable
                    height: self.minimum_height  # Adjust the height to fit all children


        # Right: Sensor Setup Form for Selected Customer
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            padding: 10
            spacing: 10

            Label:
                id: sensor_label
                text: "Please first select the Customer \nwhich you want to setup \nthe sensor for"
                font_size: '14sp'
                size_hint_y: None
                height: 80

            Label:
                id: sensor_code_label
                text: "Enter the sensor code.\nIMPORTANT!!!  \n(the sensor code is unique \nwithin the real sensor \nthat is physically set up!)"
                font_size: '14sp'
                size_hint_y: None
                height: 80

            TextInput:
                id: sensor_code_input
                size_hint_y: None
                height: 40
                multiline: False

            Label:
                text: "Please describe the sensor \n(location, type, and more details):"
                font_size: '14sp'
                size_hint_y: None
                height: 40

            TextInput:
                id: sensor_description_input
                size_hint_y: None
                height: 100
                multiline: True

            Label:
                text: "Please select the sensor type:"
                font_size: '14sp'
                size_hint_y: None
                height: 30

            # Sensor Images with Checkboxes
            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'sensor1.png'
                        size_hint_y: None
                        height: 100
                    CheckBox:
                        group: 'sensor'

                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'sensor2.png'
                        size_hint_y: None
                        height: 100
                    CheckBox:
                        group: 'sensor'

                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'sensor3.png'
                        size_hint_y: None
                        height: 100
                    CheckBox:
                        group: 'sensor'

                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'sensor4.png'
                        size_hint_y: None
                        height: 100
                    CheckBox:
                        group: 'sensor'

            Button:
                text: "Save Sensor"
                size_hint_y: None
                height: 40
                on_press: root.save_sensor()