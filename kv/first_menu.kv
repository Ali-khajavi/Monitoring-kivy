<FirstMenuScreen>:
    name: 'first_menu'

    FloatLayout:
        canvas.before:
            # Load and scale the background image to fit the screen
            Rectangle:
                source: 'assets/BackPage.jpg'  # Update this to your image path
                pos: self.pos
                size: self.size

        # Top-right positioned menu container
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 0.5)  # Adjusted size of the menu box
            pos_hint: {'x': .05, 'top': 0.95}  # Position at the top-left corner
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9  # Slight transparency for a professional look
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]  # Rounded corners for a modern look

            # Menu Buttons with custom backgrounds
            Button:
                text: 'Monitoring'
                font_size: self.width/12
                background_normal: 'assets/PNG/Button_1/b3.png'
                background_down: 'assets/PNG/Button_1/b4.png'
                on_release: app.root.current = 'monitoring'  # Navigate to Monitoring

            Button:
                text: 'Add/Edit a Customer'
                font_size: self.width/12
                background_normal: 'assets/PNG/Button_1/b1.png'
                background_down: 'assets/PNG/Button_1/b4.png'
                on_release: app.root.current = 'customer_setup'  # Navigate to Customer Setup

            Button:
                text: 'Settings'
                font_size: self.width/12
                background_normal: 'assets/PNG/Button_1/b2.png'
                background_down: 'assets/PNG/Button_1/b4.png'
                on_release: app.root.current = 'settings'  # Navigate to Settings

            Button:
                text: 'Exit'
                font_size: self.width/12
                background_normal: 'assets/PNG/Button_1/b2.png'
                background_down: 'assets/PNG/Button_1/b4.png'
                on_release: app.root.current = 'settings'  # Navigate to Settings
            
            Label:
                text:''
                size_hint_y: .1

        # Link to Registration page
        Label:
            text: '[ref=register]Register a New Account[/ref]'
            markup: True
            font_size: self.width/85
            color: 0, 0, 1, 1  # Blue color to resemble a hyperlink
            pos_hint: {'center_x': 0.12, 'center_y': 0.473}
            on_ref_press: app.root.current = 'register_screen'  # Navigate to registration screen
