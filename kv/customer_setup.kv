<CustomerListItem>:
    Label:
        id: customer_label
        text: "Placeholder"
    CheckBox:
        on_active: root.on_select(self.active)

<CustomerSetupScreen>:
    name: 'customer_setup'
    first_name_input: first_name_input
    last_name_input: last_name_input
    email_input: email_input
    phone_input: phone_input
    city_input: city_input
    address_input: address_input
    description_input: description_input
    customer_list: customer_list

    FloatLayout:
        # Background Image
        Image:
            source: 'assets/BG1.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: (1, 1)  # Cover the entire screen
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        

        # Foreground content over the background image
        BoxLayout: 
            orientation: 'horizontal'
            padding: 10
            FloatLayout:
                Image:
                    source: 'assets/F1.png'
                    allow_stretch: True
                    keep_ratio: False
                    size_hint: (.79, .96)  # Cover the entire screen
                    pos_hint: {'center_x': 0.3, 'center_y': 0.618}
                # Customer Registration Form
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.6
                    Label:
                        size_hint_y: 0.05
                        text: 'Customer Registration Form'
                        halign: 'left'

                        Image:
                            source:

                    GridLayout:
                        cols: 2
                        size_hint_y: .5
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'First Name:'
                                size_hint_x: 0.9
                        TextInput:
                            size_hint_x: 1.7
                            id: first_name_input
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'Last Name:'
                                size_hint_x: 0.9
                        TextInput:
                            size_hint_x: 1.7
                            id: last_name_input
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'Email:'
                                size_hint_x: 0.9
                        TextInput:
                            size_hint_x: 1.7
                            id: email_input
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'Phone:'
                                size_hint_x: 0.9
                        TextInput:
                            size_hint_x: 1.7
                            id: phone_input
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'City:'
                                size_hint_x: 0.9
                        TextInput:
                            size_hint_x: 1.7
                            id: city_input
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'Address:'
                                size_hint_x: 0.9
                        TextInput:
                            size_hint_x: 1.7
                            id: address_input
                        AnchorLayout:
                            anchor_y: "top"
                            anchor_x: "left"
                            Label:
                                text: 'Description:'
                                size_hint_x: 0.9
                                size_hint_y: 0.3
                        TextInput:
                            size_hint_x: 1.7
                            size_hint_y: 4
                            id: description_input
                    Button:
                        size_hint_x: .5
                        size_hint_y: .05
                        text: 'Register Customer'
                        on_press: root.register_customer()
                        pos_hint: {"x":.5}
                    AnchorLayout:
                        size_hint_y: .2
                        anchor_x: "left"
                        anchor_y: "bottom"
                        Button:
                            on_press: root.manager.current = 'first_menu'
                            text: "Back to Main Menu"
                            size_hint_x: .6
                            size_hint_y: .2

            # Customer List
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .8
                size_hint_y: 1
                Label:
                    size_hint_x: .5
                    size_hint_y: .05
                    text: 'Customer List'
                    pos_hint: {"x":.25}
                ScrollView:
                    size_hint: (1, 1)
                    height: 300
                    BoxLayout:
                        id: customer_list
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height

            # Sensor Setup Form
            BoxLayout:     
                orientation: 'vertical'
                size_hint_x: 0.6
                padding: 10
                spacing: 10

                Label:
                    id: sensor_label
                    text: "Please first select the Customer!"
                    text_size: self.size
                    size_hint_y: None
                    height: 60

                Label:
                    id: sensor_code_label
                    text: "Enter the sensor code.IMPORTANT!!!  \n(the sensor code is unique \nwithin the real sensor \nthat is physically set up!)"
                    text_size: self.size
                    size_hint_y: None
                    height: 100

                TextInput:
                    id: sensor_code_input
                    size_hint_y: None
                    height: 60
                    multiline: False

                Label:
                    text: "Please describe the sensor \n(location, type, and more details):"
                    text_size: self.size
                    size_hint_y: None
                    height: 60

                TextInput:
                    id: sensor_description_input
                    size_hint_y: None
                    height: 160
                    multiline: True

                Label:
                    text: "Please select the sensor type:"
                    text_size: self.size
                    size_hint_y: None
                    height: 30

                BoxLayout:      #----------------------------sensors Images----------------------------------#
                    orientation: 'horizontal'
                    spacing: 10
                    cols: 2
                    BoxLayout:
                        orientation: 'vertical'
                        Image:
                            source: 'assets/sensor1.png'
                        CheckBox:
                            group: 'sensor'

                    BoxLayout:
                        orientation: 'vertical'
                        Image:
                            source: 'assets/sensor2.png'
                        CheckBox:
                            group: 'sensor'

                    BoxLayout:
                        orientation: 'vertical'
                        Image:
                            source: 'assets/sensor3.png'
                        CheckBox:
                            group: 'sensor'

                    BoxLayout:
                        orientation: 'vertical'
                        Image:
                            source: 'assets/sensor4.png'
                        CheckBox:
                            group: 'sensor'

                Button:
                    text: "Save Sensor"
                    size_hint_y: None
                    height: 40
                    on_press: root.save_sensor()
